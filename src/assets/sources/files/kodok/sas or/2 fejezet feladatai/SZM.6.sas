proc optmodel;
 	number n;
    var x{1..n} >= 0 integer;
 	n = 8;   
	
	con Fizika:    x[1] + x[3] + x[7]  >= 1,
		Földrajz:  x[2] + x[6]         >= 1,
		Kemia:     x[3] + x[7]         >= 1,
      	Tesi:      x[2] + x[5]         >= 1,
        Matek:     x[1] + x[3] + x[6]  >= 1,
        Magyar:    x[4] + x[5]         >= 1,
        Angol:     x[2] + x[4] + x[8]  >= 2;


	MIN z = 127*x[1] + 130*x[2] + 150*x[3] + 133*x[4]
          + 100*x[5] + 126*x[6] + 152*x[7] +  80*x[8];

	solve;

	print x;

run;

